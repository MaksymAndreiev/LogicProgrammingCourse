% Ôóíêö³ÿ äëÿ îá÷èñëåííÿ ôàêòîğ³àëà
factorial(1, 1).
factorial(N, Result) :-
    N > 0,
    N1 is N - 1,
    factorial(N1, Result1),
    Result is N * Result1.

% Ôóíêö³ÿ äëÿ îá÷èñëåííÿ ÷ëåíó ôóíêö³îíàëüíîãî ğÿäó
series_term(I, X, Term) :-
    I>=0,
    log(3, Ln3),
    factorial(I, IFact),
    Power is X ** I,
    Term is (Ln3 ** I / IFact) * Power.

% Ôóíêö³ÿ äëÿ îá÷èñëåííÿ ñóìè n ÷ëåí³â ôóíêö³îíàëüíîãî ğÿäó
series_sum(0, _, 0).
series_sum(N, X, Sum) :-
    N > 0,
    N1 is N - 1,
    series_term(N, X, Term),
    series_sum(N1, X, Sum1),
    Sum is Sum1 + Term.
